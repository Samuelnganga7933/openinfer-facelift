{
  "scripts": {
    "start": "npm-run-all -p dev:*",
    "build": "cross-env ELEVENTY_ENV=production npm-run-all build:css build:js build:11ty",
    "dev:11ty": "cross-env ELEVENTY_ENV=development eleventy --serve --port=3000",
    "dev:css": "tailwindcss -i ./src/css/style.css -o ./_site/css/style.css --watch",
    "dev:js": "esbuild src/js/app.js --bundle --outfile=_site/js/app.js --watch",
    "build:11ty": "cross-env ELEVENTY_ENV=production eleventy",
    "build:css": "tailwindcss -i ./src/css/style.css -o ./_site/css/style.css --minify",
    "build:js": "esbuild src/js/app.js --bundle --minify --outfile=_site/js/app.js"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^5.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "alpinejs": "^3.14.9",
    "just-validate": "^4.3.0",
    "luxon": "^3.5.0",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.17"
  }
}
